# bulk water

units           metal
boundary        p p p
atom_style      atomic
atom_modify map yes

neighbor            0.3 bin
neigh_modify        delay 0
newton              off

read_data	water.lmp
mass * 1
mass 		1 1
mass 		8 15.9994

pair_style torchmolnet spookynet_model_traced_1.11.0.pt cuda 6.0
pair_coeff * *

thermo                10
thermo_modify       lost ignore
thermo_style    custom step ke pe etotal enthalpy temp press vol density

minimize        1.0e-10 1.0e-10 6000 6000

# ----------------- thermo
velocity all create 300 4928459 dist gaussian units box mom yes rot no
velocity        all zero linear

fix                    1 all nvt temp 300 300 $(100.0*dt)
dump                1 all custom 10 nvt.lammpstrj id type x y z fx fy fz
run                 1000
unfix                1
undump                1
reset_timestep        0

# ----------------- thermo1
fix                    1 all npt temp 300 300 $(100.0*dt) aniso 1.0 1.0 $(1000.0*dt)
dump                1 all custom 10 npt.lammpstrj id type x y z fx fy fz
run                 1000
unfix                1
undump                1
